/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/metapep -profile test_taxa_only,<docker/singularity>
 */

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Input data
    input = params.pipelines_testdata_base_path + 'metapep/samplesheets/v1.0/samplesheet.taxa_specific_assembly.csv'

    // nextflow secrets need to be set for NCBI_EMAIL and NCBI_KEY
}
